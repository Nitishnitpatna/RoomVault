<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-8 offset-2">
        <h1>Login</h1>
    </div>
</div>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <form action="/login" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username">Username:</label>
                <input 
                    type="text" 
                    name="username" 
                    class="form-control" 
                    id="username" 
                    required
                />
                <div class="invalid-feedback">
                    please enter title
                </div>
                <div class="valid-feedback">
                    looks good!
                </div>
            </div>

           

            <!-- <div class="mb-3">
                <label for="email">Email:</label>
                <input 
                    type="email" 
                    name="email" 
                    class="form-control" 
                    id="email" 
                    required
                />
            </div> -->

            <div class="mb-3">
                <label for="pass">Password:</label>
                <input 
                    type="password" 
                    name="password" 
                    class="form-control" 
                    id="pass" 
                    required
                />
            </div>

            <div class="mb-3 mt-3">
                <button class="btn btn-success mb-3">login</button>
            </div>
        </form>
    </div>
</div>