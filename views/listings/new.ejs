<% layout("/layouts/boilerplate.ejs") %>
<body>  
        <div class="row mt-3">
        <div class="col-8 offset-2">
        <h3>Create a new listing</h3> <br>
        <form action="/listings" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
            <div class="mb-3">
                <label for="form-title">Enter Title</label>
                <input type="text" name="title" placeholder="enter catchy title" class="form-control" id="form-title" required>
                <div class="invalid-feedback">
                    please enter title
                </div>
                <div class="valid-feedback">
                    title looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="description">Description</label>
                <textarea name="description" placeholder="enter description" class="form-control" id="discription" required></textarea>
                <div class="invalid-feedback">
                    please enter Short description
                </div>
                <div class="valid-feedback">
                    we accept your description!
                </div>
            </div>

            <div class="mb-3">
                <label for="image">Uploade Image</label>
                <input type="file" name="image" class="form-control" id="image" required>
            </div>

            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price">Enter Price</label>
                    <input type=" number" placeholder="1200" name="price" class="form-control" id="price" required>
                    <div class="invalid-feedback">
                        please enter price
                    </div>
                    <div class="valid-feedback">
                        good price !
                    </div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="country">Country</label>
                    <input type="text" placeholder="India" name="country" class="form-control" id="country" required>
                    <div class="invalid-feedback">
                       country should exist on world map
                    </div>
                    <div class="valid-feedback">
                        Yes country is accepted!
                    </div>
                </div>
        
            </div>
            <div class="mb-3">
                <label for="location">Location</label>
                <input type="text" placeholder="Jaipur Rajasthan" name="location" class="form-control" id="location" required>
                <div class="invalid-feedback">
                    location should be there in the country that you have filled!
                </div>
                <div class="valid-feedback">
                    good location!
                </div>
            </div>
            <div class="mb-3 mt-3">

                <button class="btn btn-secondary mb-3 new-btn">Add</button>
            </div>
        </form>
    </div>
    </div>
</body>