<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
        <h3>Edit Your Page</h3><br>
        <!-- method 2 of parsing data -->
        <form method="post" action="/listings/<%=listings._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="form-title">Enter Title</label>
                <input type="text" name="listings[title]" class="form-control" value="<%=listings.title%>" id="form-title" required>

                <div class="invalid-feedback">
                    please enter title
                </div>
                <div class="valid-feedback">
                    title looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="description">Description</label>
                <textarea name="listings[description]"  class="form-control" id="description" required><%=listings.description%></textarea>
                <div class="invalid-feedback">
                    please enter Short description
                </div>
                <div class="valid-feedback">
                    we accept your description!
                </div>
            </div>
            <div class="mb-3">
                <label for="image">Upload new image</label>
                <input type="file" name="listings[image]" class="form-control"  id="image" >
                <div class="invalid-feedback">
                    please enter image url
                </div>
                <div class="valid-feedback">
                    good!
                </div>
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price">Enter Price</label>
                    <input type=" number" value="<%=listings.price%>" name="listings[price]" class="form-control" id="price" required>
                    <div class="invalid-feedback">
                        please enter price
                    </div>
                    <div class="valid-feedback">
                        good price !
                    </div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="country">Country</label>
                    <input type="text" value="<%=listings.country%>" name="listings[country]" class="form-control" id="country" required>
                    <div class="invalid-feedback">
                        country should exist on world map
                     </div>
                     <div class="valid-feedback">
                         Yes country is accepted!
                     </div>
                </div>
            </div>
            <div class="mb-3">
                <label for="location">Location</label>
                <input type="text" value="<%=listings.location%>" name="listings[location]" class="form-control" required id="location">
                <div class="invalid-feedback">
                    location should be there in the country that you have filled!
                </div>
                <div class="valid-feedback">
                    good location!
                </div>
            </div>
            <div class="mb-3 mt-3">
                <button class="btn btn-secondary mb-3 edit-btn">Edit</button>
            </div>
        </form>
    </div>
</div>
</body>
</html>